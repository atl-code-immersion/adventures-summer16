<p id="notice"><%= notice %></p>

<h1>Listing Activities</h1>

<%= link_to 'New Activity', new_activity_path, class: "btn btn-success" %>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Cost</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.id %></td>
        <td><%= activity.name %></td>
        <td><%= number_to_currency activity.cost %></td>
        <td><%= "#{activity.duration} hours" %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <% @activity_pics.each do |pic, descr| %>
    <%= image_tag pic, alt: descr, class: "img-responsive" %>
  <% end %>
</p>